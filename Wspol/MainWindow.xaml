<Window x:Class="Wspol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wspol"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Click the button to generate a random number between 1 and 100." Height="29"/>
            <Button Content="Generate" Click="GenerateButton_Click" Width="200" Background="#FFACEAF5" RenderTransformOrigin="0.5,0.5" >
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-1.599"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.279"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <TextBlock x:Name="ResultText" FontWeight="Bold" Margin="0 10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
