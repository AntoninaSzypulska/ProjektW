<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:ViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Wybierz ilość kulek"/>
            <TextBox Text="{Binding AmountChoice}" FontWeight="Bold" Margin="0 10" TextAlignment="Center"/>
            <Button Content="Wybierz" Width="100" RenderTransformOrigin="0.5,0.5" Command="{Binding ChoiceButton}" Background="#FFACEAF5"/>
        </StackPanel>
    </Grid>
</Window>
